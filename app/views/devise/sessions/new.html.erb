         <div id=sign_in2>
           <div class="section_header">
                <h3>Log in to your account</h3>
            </div>
<div class="row login">
                <div class="col-sm-6 signin_box">
                    <div class="box">
                        <div class="box_cont">
                            <div class="social">
                                <a class="circle facebook" href="<%=user_omniauth_authorize_path(:facebook)%>">
                                    <%= image_tag "face.png" %>
                                </a>
                                 <a class="circle twitter" href="<%=user_omniauth_authorize_path(:twitter)%>">
                                    <%= image_tag "twt.png" %>
                                </a>
                                 <a class="circle gplus" href="<%=user_omniauth_authorize_path(:google_oauth2)%>">
                                    <%= image_tag "gplus.png" %>
                                </a>
                            </div>

                            <div class="division">
                                <div class="line l"></div>
                                <span>or</span>
                                <div class="line r"></div>
                            </div>

                            <div class="form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<input type="text" class="form-control" placeholder="Username or Email" name="user[login]">
<input type="text" class="form-control" placeholder="Password" name="user[password]">
<div class="forgot">
<span>Don't have an account?</span>
<a href="/users/sign_up">Sign up</a>
</div>
<div><%= f.submit "Sign in" %></div>
<% end %>
<%#= render "devise/shared/links" %>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
</div>
