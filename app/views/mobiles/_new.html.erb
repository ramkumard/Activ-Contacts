<div class="modal-header">  
<a class="close" data-dismiss="modal">X</a>  
<h3>Add New Number</h3>  
</div>  
<div class="modal-body">  
<form class="form-horizontal" data-remote="true" id="mobile">
        <div class="inner-box">
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="tag">Mobile Type<span class="req">*</span></label>
                        <div class="controls">
                            <%=select_tag 'mobile[tag]', options_for_select(%w[Mobile Work Home Other])%>
                            <div class="error_display" id="error_tag"></div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="phone_no">Mobile No<span class="req">*</span></label>
                        <div class="controls">
                            <input type="text" class="input-large" id="phone" placeholder="" name="mobile[phone_no]">
                            <div class="error_display" id="error_phone_no"></div>
                        </div>
                    </div>
                <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="status">Mobile Status<span class="req">*</span></label>
                        <div class="controls">
                            <%=select_tag 'mobile[status]', options_for_select({ "Active" => "true", "InActive" => "false" })%>
                            <div class="error_display" id="error_phone_no"></div>
                        </div>
                    </div>
                </div>
            </div><!-- row ends -->            
</div> 
</div>
</div>
<div class="form-actions">
<a href="#" class="btn btn-success" id="mobile_submit">Submit</a>  
<a href="#" class="btn" data-dismiss="modal">Close</a>  
</div>
</form>
</div>