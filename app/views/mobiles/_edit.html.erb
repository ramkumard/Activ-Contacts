<div class="modal-header">  
<a class="close" data-dismiss="modal">X</a>  
<h3>Edit Number</h3>  
</div>  
<div class="modal-body">  
<%= form_for :mobile , :url => "/mobiles/#{params[:id]}" , :method => "put",:class=>"form-horizontal",:id=>"mobile" do |f| %>
        <div class="inner-box">
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="tag">Mobile Type<span class="req">*</span></label>
                        <div class="controls">
                            <%=select_tag 'mobile[tag]', options_for_select(%w[Mobile Work Home Other], selected: @mobile ? @mobile.tag : "" )%>
                            <div class="errormsg" ><%= @mobile && @mobile.errors ? @mobile.errors['tag'][0] : "" %></div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="phone_no">Mobile No<span class="req">*</span></label>
                        <div class="controls">
                            <%= f.text_field :phone_no%>
                            <div class="error_display" id="error_phone_no"><%= @mobile && @mobile.errors ? @mobile.errors['phone_no'][0] : "" %></div>
                        </div>
                    </div>
                <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="status">Mobile Status<span class="req">*</span></label>
                        <div class="controls">
                            <%=select_tag 'mobile[status]', options_for_select({ "Active" => "true", "InActive" => "false" }, selected: @mobile ? @mobile.status : "" )%>
                            <div class="error_display" id="error_phone_no"></div>
                        </div>
                    </div>
                </div>
            </div><!-- row ends -->            
</div> 
</div>
</div>
<div class="form-actions">
<button type="submit" class="btn btn-success"  id="mobile_edit">Update</button>
<a href="#" class="btn" data-dismiss="modal">Close</a>  
</div>
<%end%>
</div>