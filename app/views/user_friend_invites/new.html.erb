<div class="container-fluid top-light">
	<div class="container">
		
		<div class="row section">
			<div class="span12">
				
				<ul class="breadcrumb no-bottom">
					<li class="active">Members</li>
				</ul>

			</div>
		</div>

	</div>
</div>

<div class="container-fluid section-wrapper">
	<div class="container">
		
		<div class="row section">
			<div class="span12">
				
				<div class="row">
					<div class="span12">
						
						<% if user_signed_in? %>
							
							<div class="row">
								<div class="span4">
									<h1 style="padding-top: 5px;">Search Members</h1>
								</div>
								<div class="span2" style="margin-top: 4px;">
									<div class="btn-group">
										<button class="btn btn-primary">Sort By:</button>
										<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
										<ul class="dropdown-menu">
											<li><%= link_to "Sort by newest", "/users" %></li>
											<li><%= link_to "Sort by name", "/users/sort/name" %></li>
											<li><%= link_to "Sort by location", "/users/sort/location" %></li>
										</ul>
									</div>
								</div>
								<div class="span6">
								
									<div class="control-group form-inline pull-right find-friends">
										<div class="controls">
											<div class="input-append">
												<%= form_tag "/search", :method => :post, :class => "" do %>
												    <%= text_field_tag :search, params[:search], :class => "span3", :placeholder => "Search Members..." %>
													<%= hidden_field_tag :custom_search, "user" %>
												    <%= button_tag "Search", :name => nil, :class => "btn btn-small" %>
												<% end %>
											</div>
											<p class="help-block search-block">Search for user name, city, state(XX) or zipcode.</p>
										</div>
									</div>
								
								</div>
							</div>
							
						<% else %>
							
							<div class="container">
								<div class="row">
									<div class="span12">
										<div class="hero-unit">
											<h1>Thanks for visiting Solitical</h1>
											<p>We ask that you join before finding and connecting with other members. Come on in and join the conversation.</p>
											<p><%= link_to "Register", "/users/new", :class => "btn btn-primary" %></p>
											<p><small>Already have an account? <%= link_to "Login now", "/users/login", :class => "" %>.</small></p>
										</div>
									</div>
								</div>
							</div>
							
						<% end %>



						<div class="container">

							<% if user_signed_in? %>
							
								<!-- row -->
								<div class="row">
								
									<ul class="members">
										<% @users.each do |user| %>
											<li class="member">
												<%#= link_to avatar(user.avatar.medium.url, :class => "avatar"), "/users/board/#{user.id}", :title => "#{user.first_name} #{user.last_name}" %>
												<div class="details">
													
													<h4><%= link_to "#{user.username}", "/users/board/#{user.id}" %></h4>
													<p class="meta">
														<%#= user.city.blank? ? "" : user.city + ", " %><%#= user.state.blank? ? "" : user.state %>
													</p>
											
													<%# if user.is_official == 'y' %>
														<%= link_to image_tag("icn-official.png", :class => "official-icon"), "#", :title => "Official", :class => "tip" %>
													<%# end %>
											
													<%# if user.friends.include?(current_user) %>
														<%= link_to image_tag("friend-pin.png"), "#", :title => "Friend", :class => "friend-pin tip" %>
													<%# end %>

													<%# if !user.friends.include?(current_user) %>
														<%= button_to "Add Friend", '#', :class => "btn btn-small btn-primary" %>
													<%# end %>

													<%#= link_to avatar(user.avatar.medium.url, :class => "avatar-tiny"), "/users/board/#{user.id}", :title => "#{user.first_name} #{user.last_name}" %>

												</div>
											</li>
										<% end %>
									</ul>

								</div>

								<%#= will_paginate @posts, :page_links => false %>

							<% end %>

						</div>

					</div>
				</div>

			</div>
		</div>

	</div>
</div>